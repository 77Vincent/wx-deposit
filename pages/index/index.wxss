.container {
  padding: 15px;
}

.section {
  margin: 7px 0;
}

form {
  width: 100%;
  font-size: 0.85em;
}

.input-field {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
}

.input-label {
  flex: 3;
  align-items: center;
  color: #202020;
}

.input-line {
  height: 1px;
  background-color: lightgray;
  margin-top: 7px;
}

input {
  flex: 2;
  border: 1px solid lightgray;
  border-radius: 3px;
  padding: 1px 3px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}