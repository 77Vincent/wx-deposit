page {
  height: 100%;
}

.container {
  padding: 5px 25rpx;
  justify-content: flex-start;
}

.section {
  margin: 7px 0;
}

.row {
  width: 100%;
  box-sizing: border-box;
}

form {
  font-size: 14px;
}

.field {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  min-height: 27px;
}

.field-label {
  flex: 1;
}

input {
  width: 120px;
  border: 1px solid lightgray;
  border-radius: 3px;
  padding: 0px 2px;
}

.output-container {
  background-color: #f7f7f7;
  border-radius: 5px;
  padding: 5px 12px;
  margin-top: 10px;
  border: 1px solid #e7e7e7;
}

.output-container .section {
  border-bottom: 1px solid #e7e7e7;
}

.output-container .section:last-child {
  border-bottom: none;
}

button {
  background-color: #384A7A;
  border: none;
  color: white;
}

.input-tips {
  background-color: #384A7A;
  color: white;
  padding: 5px;
  border-radius: 5px;
  margin-top: 5px;
  position: relative;
}

.input-tips:before {
  display: block;
  content: "";
  position: absolute;
  left: 14px;
  top: -14px;
  border-top: 7px solid transparent;
  border-bottom: 7px solid #384A7A;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
}

.tips {
  width: 15px;
  height: 15px;
  background-color: #777;
  border-radius: 50%;
  margin-right: 10px;
}

.tips:before {
  display: block;
  content: "?";
  color: white;
  text-align: center;
  font-size: 12px;
}

.footer {
  width: 100%;
  background-color: #f8f8f8;
  font-size: 12px;
}