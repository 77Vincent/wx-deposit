page {
}

.container {
  padding: 15px;
}

.section {
  margin: 7px 0;
}

.row {
  width: 100%;
  box-sizing: border-box;
}

form {
  font-size: 14px;
}

.field {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.field-label {
  flex: 1;
}

input {
  width: 120px;
  border: 1px solid lightgray;
  border-radius: 3px;
  padding: 0px 2px;
}

.global-tips {
  text-align: left;
  background-color: #f8f8f8;
  margin-top: 7px;
  padding: 7px;
  font-size: 12px;
}

.btn-calculate {
  letter-spacing: 5px;
}